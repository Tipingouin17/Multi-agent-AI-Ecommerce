# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# IMPORTANT: Never commit actual .env files to version control!
# This is a template. Copy to .env and fill in actual values.
#
# Required variables have no default values and MUST be set.
# Optional variables have defaults that can be overridden.
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
DATABASE_HOST=your-database-host.example.com
DATABASE_PORT=5432
DATABASE_NAME=ecommerce_production
DATABASE_USER=ecommerce_user
DATABASE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!

# Database connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# AUTHENTICATION & SECURITY (REQUIRED)
# =============================================================================
# JWT secret key - MUST be a strong random string
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS

# Token expiration times (in minutes/days)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS CONFIGURATION (REQUIRED)
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com,https://merchant.example.com

# =============================================================================
# REDIS CONFIGURATION (REQUIRED)
# =============================================================================
REDIS_URL=redis://your-redis-host.example.com:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Redis connection settings
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# KAFKA CONFIGURATION (REQUIRED)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka-1.example.com:9092,kafka-2.example.com:9092,kafka-3.example.com:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=your-kafka-username
KAFKA_SASL_PASSWORD=CHANGE_THIS_KAFKA_PASSWORD

# Kafka topic configuration
KAFKA_TOPIC_PREFIX=prod_ecommerce_
KAFKA_CONSUMER_GROUP=ecommerce-agents

# =============================================================================
# RATE LIMITING (OPTIONAL)
# =============================================================================
DEFAULT_RATE_LIMIT=100/minute
DEFAULT_RATE_LIMIT_HOURLY=1000/hour
STRICT_RATE_LIMIT=10/minute

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/ecommerce/app.log

# Structured logging
STRUCTLOG_PROCESSORS=json
STRUCTLOG_TIMESTAMP_FORMAT=iso

# =============================================================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# =============================================================================
# Prometheus metrics
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Sentry error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# MARKETPLACE API CREDENTIALS (REQUIRED FOR MARKETPLACE INTEGRATIONS)
# =============================================================================

# CDiscount
CDISCOUNT_API_KEY=your-cdiscount-api-key
CDISCOUNT_API_SECRET=your-cdiscount-api-secret
CDISCOUNT_MERCHANT_ID=your-cdiscount-merchant-id

# Amazon
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_MERCHANT_ID=your-amazon-merchant-id
AMAZON_MARKETPLACE_ID=your-amazon-marketplace-id

# BackMarket
BACKMARKET_API_KEY=your-backmarket-api-key
BACKMARKET_API_SECRET=your-backmarket-api-secret

# Refurbed
REFURBED_API_KEY=your-refurbed-api-key
REFURBED_API_SECRET=your-refurbed-api-secret

# eBay
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id
EBAY_DEV_ID=your-ebay-dev-id
EBAY_USER_TOKEN=your-ebay-user-token

# Mirakl
MIRAKL_API_KEY=your-mirakl-api-key
MIRAKL_API_URL=https://your-shop.mirakl.net

# =============================================================================
# OPENAI API (REQUIRED FOR AI FEATURES)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Multi-Agent E-commerce

# =============================================================================
# PAYMENT GATEWAY (OPTIONAL)
# =============================================================================
# Stripe
STRIPE_API_KEY=sk_live_your-stripe-api-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live

# =============================================================================
# STORAGE (OPTIONAL)
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ecommerce-production-assets

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================
ENABLE_MARKETPLACE_SYNC=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_FRAUD_DETECTION=true
ENABLE_DYNAMIC_PRICING=true

# =============================================================================
# PERFORMANCE TUNING (OPTIONAL)
# =============================================================================
# API workers
UVICORN_WORKERS=4
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000

# Agent concurrency
MAX_CONCURRENT_TASKS=100
AGENT_TIMEOUT_SECONDS=30

# =============================================================================
# BACKUP & DISASTER RECOVERY (OPTIONAL)
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ecommerce-production-backups

# =============================================================================
# COMPLIANCE & GDPR (OPTIONAL)
# =============================================================================
DATA_RETENTION_DAYS=365
ENABLE_GDPR_FEATURES=true
PRIVACY_POLICY_URL=https://example.com/privacy
TERMS_OF_SERVICE_URL=https://example.com/terms

# =============================================================================
# DEVELOPMENT/STAGING OVERRIDES
# =============================================================================
# Set to 'development', 'staging', or 'production'
ENVIRONMENT=production

# Debug mode (NEVER enable in production!)
DEBUG=false

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

